#!/usr/bin/env bash

# XDG Base Directory
export XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-$HOME/.config}"
export XDG_CACHE_HOME="${XDG_CACHE_HOME:-$HOME/.cache}"
export XDG_DATA_HOME="${XDG_DATA_HOME:-$HOME/.local/share}"
export XDG_STATE_HOME="${XDG_STATE_HOME:-$HOME/.local/state}"

# PATH additions using consistent case statement pattern
case ":$PATH:" in
  *":$HOME/.local/bin:"*) ;;
  *) export PATH="$HOME/.local/bin:$PATH" ;;
esac

case ":$PATH:" in
  *":$HOME/bin:"*) ;;
  *) export PATH="$HOME/bin:$PATH" ;;
esac

case ":$PATH:" in
  *":$HOME/.scripts:"*) ;;
  *) export PATH="$HOME/.scripts:$PATH" ;;
esac

export CDPATH=.:~

# Default applications
export EDITOR="nvim"
export VISUAL="nvim"
export PAGER="less -FRX"
export MANPAGER="less -FRX"

# mozilla environment variables (Linux/Wayland only)
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
    export MOZ_ENABLED_WAYLAND=1
fi

# Locale
export LANG=en_CA.UTF-8
export LC_ALL=en_CA.UTF-8

export HISTIGNORE="ls:cd:pwd:exit:date:clear:history:bg:fg:* --help"
export LESSHISTFILE=-

# enable fzf key bindings and auto-completion
export FZF_DEFAULT_OPTS=" \
--color=bg+:#353b45,bg:#282c34,spinner:#56b6c2,hl:#61afef \
--color=fg:#565c64,header:#61afef,info:#e5c07b,pointer:#56b6c2 \
--color=marker:#56b6c2,fg+:#b6bdca,prompt:#e5c07b,hl+:#61afef \
--multi"

export FZF_CTRL_T_OPTS="
  --walker-skip .git,node_modules,target
  --preview 'bat -n --color=always {}'
  --bind 'ctrl-/:change-preview-window(down|hidden|)'"

export FZF_ALT_C_OPTS="
  --walker-skip .git,node_modules,target
  --preview 'tree -C {}'"

export FZF_COMPLETION_TRIGGER='**'

# bemenu options (Linux/Wayland only)
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
    export BEMENU_OPTS='--fb "#1e1e2e" --ff "#cdd6f4" --nb "#1e1e2e" --nf "#cdd6f4" --tb "#1e1e2e" --hb "#1e1e2e" --tf "#f38ba8" --hf "#f9e2af" --af "#cdd6f4" --ab "#1e1e2e"'
fi
 
# pnpm
export PNPM_HOME="$XDG_DATA_HOME/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac

# npm
export NPM_HOME="$HOME/.npm-global"
case ":$PATH:" in
  *":$NPM_HOME:"*) ;;
  *) export PATH="$NPM_HOME/bin:$PATH" ;;
esac

# GPG TTY
export GPG_TTY=$(tty)

# BUN
export BUN_INSTALL="$HOME/.bun"
case ":$PATH:" in
  *":$BUN_INSTALL:"*) ;;
  *) export PATH="$BUN_INSTALL/bin:$PATH" ;;
esac
 
# CARGO
export CARGO_HOME="$HOME/.cargo"
case ":$PATH:" in
  *":$CARGO_HOME:"*) ;;
  *) export PATH="$CARGO_HOME/bin:$PATH" ;;
esac

# GO
export GOPATH="$HOME/go"
# Use case statement like other PATH additions for consistency
case ":$PATH:" in
  *":$GOPATH/bin:"*) ;;
  *) export PATH="$GOPATH/bin:$PATH" ;;
esac

# GLAMOUR
export GLAMOUR_STYLE="$XDG_CONFIG_HOME/glamour/catppuccin-mocha.json"

