{
  "title": "Ctrl+Shift+C/V clipboard for TERMINALS",
  "rules": [
    {
      "description": "Map Ctrl+Shift+C/V to ⌘C/⌘V for clipboard in Terminal/Kitty/Ghostty. Preserves all other Ctrl shortcuts (C/A/Z/X/Y/F for shell/tmux).",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "control",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^net\\.kovidgoyal\\.kitty$",
                "^com\\.mitchellh\\.ghostty$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": [
                "control",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^net\\.kovidgoyal\\.kitty$",
                "^com\\.mitchellh\\.ghostty$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
