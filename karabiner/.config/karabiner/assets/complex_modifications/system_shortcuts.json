{
  "title": "System Shortcuts (Hyprland-style)",
  "rules": [
    {
      "description": "Cmd+Return → New kitty window at ~/ (like Hyprland $mod+Return)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "~/.config/karabiner/scripts/new-kitty-window.sh"
            }
          ]
        }
      ]
    },
    {
      "description": "Cmd+Escape → Toggle SketchyBar visibility",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "~/.config/karabiner/scripts/toggle-sketchybar.sh"
            }
          ]
        }
      ]
    },
    {
      "description": "Cmd+F in System Settings → Focus search field (prevent Aerospace fullscreen)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "~/.config/karabiner/scripts/system-settings-search.sh"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.systempreferences$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
