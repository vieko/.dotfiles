{
  // Editor appearance
  "context_servers": {
    "playwright": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--headless",
        "--isolated"
      ],
      "env": {}
    }
  },
  "theme": {
    "dark": "One Dark",
    "light": "One Light",
    "mode": "system"
  },
  "icon_theme": "Zed (Default)",
  "ui_font_family": "Zed Plex Sans",
  "ui_font_size": 14,
  "ui_font_weight": 400,
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_size": 14,
  "buffer_font_weight": 375,
  "buffer_line_height": {
    "custom": 1.4
  },

  // Editor behavior
  "base_keymap": "VSCode",
  "vim_mode": true,
  "cursor_blink": false,
  "cursor_shape": "block",
  "preferred_line_length": 80,
  "tab_size": 2,
  "wrap_guides": [80],
  "show_wrap_guides": true,
  "soft_wrap": "preferred_line_length",
  "scroll_beyond_last_line": "one_page",
  "show_whitespaces": "all",
  "unnecessary_code_fade": 0.5,

  // Panels and UI elements
  "agent": {
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "default_width": 640,
    "dock": "right",
    "enabled": true
  },
  "project_panel": {
    "default_width": 360,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_guides": {
      "show": "never"
    }
  },
  "outline_panel": {
    "default_width": 360,
    "file_icons": true,
    "folder_icons": true,
    "git_status": true
  },
  "git_panel": {
    "default_width": 360,
    "dock": "left"
  },
  "terminal": {
    "default_height": 320,
    "detect_venv": {
      "on": {
        "activate_script": "default",
        "directories": [".venv", "venv"]
      }
    },
    "dock": "bottom",
    "font_family": "Zed Plex Mono",
    "font_size": 12,
    "font_weight": 400,
    "line_height": "standard",
    "toolbar": {
      "breadcrumbs": true
    }
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "scrollbar": {
    "show": "never"
  },

  // Language and completion settings
  "languages": {
    "Markdown": { "show_edit_predictions": false }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions": {
    "mode": "subtle"
  },

  // Vim-specific settings
  "vim": {
    "highlight_on_yank_duration": 150,
    "toggle_relative_line_numbers": true,
    "use_smartcase_find": false,
    "use_system_clipboard": "always"
  },

  // Miscellaneous
  "indent_guides": {
    "active_line_width": 1,
    "background_coloring": "disabled",
    "coloring": "indent_aware",
    "enabled": false,
    "line_width": 1
  },
  "journal": {
    "hour_format": "hour24"
  },
  "ssh_connections": [
    {
      "host": "192.168.50.116",
      "username": "vieko",
      "nickname": "chaos",
      "projects": [
        {
          "paths": ["~/dev/app-data-dashboard"]
        },
        {
          "paths": ["~/dev/app-beta-squadron"]
        }
      ]
    }
  ],
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
