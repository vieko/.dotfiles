{
  "assistant": {
    "default_model": {
      "model": "claude-3-5-sonnet-latest",
      "provider": "zed.dev"
    },
    "default_width": 640,
    "dock": "right",
    "version": "2"
  },
  "base_keymap": "VSCode",
  "buffer_font_family": "MonoLisa Custom",
  "buffer_font_size": 13, // 14? on chaos, 13 on havoc.
  "buffer_font_weight": 500,
  "buffer_line_height": "standard",
  "cursor_blink": false,
  "cursor_shape": "block",
  "features": {
    "inline_completion_provider": "copilot"
  },
  "indent_guides": {
    "active_line_width": 1,
    "background_coloring": "disabled",
    "coloring": "indent_aware",
    "enabled": false,
    "line_width": 1
  },
  "journal": {
    "hour_format": "hour24"
  },
  "outline_panel": {
    "default_width": 320
  },
  "preferred_line_length": 80,
  "project_panel": {
    "default_width": 320,
    "dock": "left",
    "indent_guides": {
      "show": "never"
    }
  },
  "scrollbar": {
    "show": "never"
  },
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "show_whitespaces": "all",
  "show_wrap_guides": true,
  "soft_wrap": "preferred_line_length",
  "tab_size": 2,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "default_height": 320,
    "detect_venv": {
      "on": {
        "activate_script": "default",
        "directories": [".venv", "venv"]
      }
    },
    "dock": "bottom",
    "font_family": "MonoLisa Custom",
    "font_size": 12, // 12 on chaos, 11 on havoc.
    "font_weight": 500,
    "line_height": "standard",
    "toolbar": {
      "breadcrumbs": true
    }
  },
  "theme": {
    "dark": "Catppuccin Mocha - No Italics",
    "light": "Catppuccin Frapp√© - No Italics",
    "mode": "system"
  },
  "ui_font_family": "Berkeley Mono",
  "ui_font_features": {
    "calt": false
  },
  "ui_font_size": 14, // 14 on chaos, 13 on havoc.
  "ui_font_weight": 400,
  "unnecessary_code_fade": 0.6,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_multiline_find": false,
    "use_smartcase_find": false,
    "use_system_clipboard": "always"
  },
  "vim_mode": true,
  "wrap_guides": [80]
}
