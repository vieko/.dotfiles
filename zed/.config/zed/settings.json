{
  // Editor appearance
  "theme": {
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Frapp√©",
    "mode": "system"
  },
  "icon_theme": "Zed (Default)",
  "ui_font_family": "Inter",
  "ui_font_size": 14,
  "ui_font_weight": 400,
  "buffer_font_family": "MonoLisa Custom",
  "buffer_font_size": 13,
  "buffer_font_weight": 500,
  "buffer_line_height": {
    "custom": 1.4
  },
  // Editor behavior
  "base_keymap": "VSCode",
  "vim_mode": true,
  "cursor_blink": false,
  "cursor_shape": "block",
  "preferred_line_length": 80,
  "tab_size": 2,
  "wrap_guides": [80],
  "show_wrap_guides": true,
  "soft_wrap": "preferred_line_length",
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "show_whitespaces": "all",
  "unnecessary_code_fade": 0.6,

  // Panels and UI elements
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620-fast-edit"
    },
    "inline_alternatives": [
      {
        "provider": "openai",
        "model": "gtp-4o"
      }
    ],
    "default_width": 640,
    "dock": "right",
    "enable_experimental_live_diffs": true,
    "enabled": true,
    "version": "2"
  },
  "project_panel": {
    "default_width": 320,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_guides": {
      "show": "never"
    }
  },
  "outline_panel": {
    "default_width": 320,
    "file_icons": true,
    "folder_icons": true,
    "git_status": true
  },
  "terminal": {
    "default_height": 320,
    "detect_venv": {
      "on": {
        "activate_script": "default",
        "directories": [".venv", "venv"]
      }
    },
    "dock": "bottom",
    "font_family": "MonoLisa Custom",
    "font_size": 12,
    "font_weight": 400,
    "line_height": "standard",
    "toolbar": {
      "breadcrumbs": true
    }
  },
  "tabs": {
    "file_icons": true,
    "folder_icons": true,
    "git_status": true
  },
  "scrollbar": {
    "show": "never"
  },

  // Language and completion settings
  "languages": {
    "Markdown": { "show_inline_completions": false }
  },
  "language_models": {
    "zed.dev": {
      "available_models": [
        {
          "provider": "anthropic",
          "name": "claude-3-5-sonnet-20240620-fast-edit",
          "max_tokens": 200000,
          "max_output_tokens": 8192,
          "display_name": "Claude 3.5 Sonnet (Fast Edit)"
        }
      ]
    }
  },
  "features": {
    "inline_completion_provider": "zed",
    "copilot": true
  },
  // Vim-specific settings
  "vim": {
    "highlight_on_yank_duration": 150,
    "toggle_relative_line_numbers": true,
    "use_multiline_find": false,
    "use_smartcase_find": false,
    "use_system_clipboard": "always"
  },

  // Miscellaneous
  "indent_guides": {
    "active_line_width": 1,
    "background_coloring": "disabled",
    "coloring": "indent_aware",
    "enabled": false,
    "line_width": 1
  },
  "journal": {
    "hour_format": "hour24"
  },
  "ssh_connections": [
    {
      "host": "192.168.50.116",
      "username": "vieko",
      "nickname": "chaos",
      "projects": [
        {
          "paths": [
            "~/Documents/Development/poc-influencer-dashboard-elt-serve"
          ]
        },
        {
          "paths": ["~/Documents/Development/app-beta-squadron"]
        }
      ]
    },
    {
      "host": "100.97.133.24",
      "username": "root",
      "nickname": "erebos",
      "projects": [
        {
          "paths": ["~/tmp/poc-influencer-dashboard-elt-serve"]
        }
      ]
    }
  ],
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
