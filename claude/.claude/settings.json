{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(~/.claude/statusline.sh)"
    ]
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true,
    "bonfire@vieko": true
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/format-claude-output.sh"
          }
        ]
      }
    ]
  }
}
